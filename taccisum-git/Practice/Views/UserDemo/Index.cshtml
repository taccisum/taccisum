
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <script>
        require(["ViewJs/UserDemo/UserDemoList"], function(module) {
            module.init();
        });

    </script>
}

@section tips{
    <span class="bold">aaaasd</span>
    <button type="button" class="close" data-dismiss="alert"><i class="icon-remove"></i></button>
}

@section parameters{
    <div class="container" style="width: 100%;">
        <div class="row">
            <div class="col-xs-6 col-md-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon bold">Account</span>
                    <input id="txt-uid" class="form-control query-input" type="text" data-bind="value: account" />
                </div>
            </div>
            <div class="col-xs-6 col-md-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon bold">NickName</span>
                    <input id="txt-nn" class="form-control query-input" type="text" data-bind="value: nickname" />
                </div>
            </div>
        </div>
    </div>
}

@section buttons{
    <button id="btn-query" class="btn btn-info btn-sm"><i class="icon-refresh"></i> 查询 </button>
    <button id="btn-add" class="btn btn-success btn-sm"><i class="icon-plus"></i> 新增 </button>
    <button id="btn-delete" class="btn btn-danger btn-sm"><i class="icon-remove"></i> 删除 </button>
    <button id="btn-update" class="btn btn-info btn-sm"><i class="icon-pencil"></i> 修改 </button>
}

<table id="table_id" class="display"></table>

<div id="dialog-add_user" class="hidden">
    <div id="content-add_user" class="container" style="width: 100%">

        <!-- ko if: debug -->
        <div class="row">
            <div class="col-md-12">
                <button id="btn_mock_user" class="btn btn-info btn-sm"><i class="icon-pencil"></i>Mock</button>
            </div>
        </div>
        <div class="emptyRow"></div>
        <!-- /ko -->
        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon bold">用户名</span>
                    <input class="form-control" data-bind="value: Account"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon bold">密码</span>
                    <input class="form-control" data-bind="value: Password"/>
                </div>
            </div>
        </div>
        <div class="emptyRow"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="input-group input-group-sm">
                    <span class="input-group-addon bold">昵称</span>
                    <input class="form-control" data-bind="value: NickName"/>
                </div>
            </div>
        </div>
    </div>
</div>